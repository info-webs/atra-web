---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Format date
const options: Intl.DateTimeFormatOptions = {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
};
const formattedDate = post.data.pubDate.toLocaleDateString('es-ES', options);

// Get related posts (same category, excluding current)
const relatedPosts = (await getCollection('blog'))
  .filter(p =>
    p.data.category === post.data.category &&
    p.slug !== post.slug &&
    p.data.draft !== true
  )
  .slice(0, 3);
---

<Layout
  title={`${post.data.title} - Blog ATRA`}
  metaDescription={post.data.description}
>
  <main class="min-h-screen bg-white">
    <!-- Hero con imagen -->
    {post.data.image ? (
      <div class="w-full h-96 relative">
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      </div>
    ) : (
      <div class="w-full h-96 bg-gradient-to-br from-primary to-primary-700"></div>
    )}

    <article class="container mx-auto px-8 py-12 max-w-4xl">
      <!-- Breadcrumb -->
      <nav class="text-sm text-gray-600 mb-8">
        <a href="/" class="hover:text-primary transition-colors">Inicio</a>
        <span class="mx-2">/</span>
        <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900">{post.data.title}</span>
      </nav>

      <!-- Meta info -->
      <div class="mb-8">
        <span class="inline-block bg-primary/10 text-primary px-4 py-1 rounded-full text-sm font-medium mb-4">
          {post.data.category}
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          {post.data.title}
        </h1>
        <p class="text-xl text-gray-600 mb-6">
          {post.data.description}
        </p>
        <div class="flex items-center text-gray-500 text-sm">
          <span>{post.data.author}</span>
          <span class="mx-2">•</span>
          <time datetime={post.data.pubDate.toISOString()}>
            {formattedDate}
          </time>
        </div>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none
        prose-headings:text-gray-900 prose-headings:font-bold
        prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-4
        prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-3
        prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-6
        prose-a:text-primary prose-a:no-underline hover:prose-a:underline
        prose-strong:text-gray-900 prose-strong:font-semibold
        prose-ul:text-gray-700 prose-ul:my-6
        prose-ol:text-gray-700 prose-ol:my-6
        prose-li:my-2
        prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:text-gray-700
        prose-img:rounded-xl prose-img:shadow-lg prose-img:my-8
        prose-code:text-primary prose-code:bg-gray-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded
      ">
        <Content />
      </div>

      <!-- Tags -->
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Etiquetas:</h3>
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag: string) => (
              <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition-colors">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Share -->
      <div class="mt-12 pt-8 border-t">
        <h3 class="text-sm font-medium text-gray-700 mb-4">Compartir artículo:</h3>
        <div class="flex flex-wrap gap-4">
          <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
          <a
            href={`https://twitter.com/intent/tweet?url=${Astro.url}&text=${encodeURIComponent(post.data.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-sky-500 text-white rounded-lg hover:bg-sky-600 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
            Twitter
          </a>
          <a
            href={`https://wa.me/?text=${encodeURIComponent(post.data.title + ' ' + Astro.url)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            WhatsApp
          </a>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-16 p-8 bg-primary/5 rounded-2xl text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-3">
          ¿Necesitas ayuda o más información?
        </h3>
        <p class="text-gray-700 mb-6">
          Estamos aquí para escucharte y orientarte
        </p>
        <a
          href="/contacto"
          class="inline-block bg-primary text-white px-8 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors"
        >
          Contacta con nosotros
        </a>
      </div>
    </article>

    <!-- Related posts -->
    {relatedPosts.length > 0 && (
      <section class="bg-gray-50 py-16">
        <div class="container mx-auto px-8">
          <h2 class="text-3xl font-bold text-center mb-12">
            Artículos relacionados
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {relatedPosts.map(relatedPost => (
              <article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow">
                {relatedPost.data.image ? (
                  <a href={`/blog/${relatedPost.slug}`}>
                    <img
                      src={relatedPost.data.image}
                      alt={relatedPost.data.title}
                      class="w-full h-48 object-cover"
                    />
                  </a>
                ) : (
                  <div class="w-full h-48 bg-gradient-to-br from-primary to-primary-700"></div>
                )}

                <div class="p-6">
                  <span class="inline-block bg-primary/10 text-primary px-3 py-1 rounded-full text-xs font-medium mb-3">
                    {relatedPost.data.category}
                  </span>

                  <h3 class="text-lg font-bold text-gray-900 mb-2 hover:text-primary transition-colors">
                    <a href={`/blog/${relatedPost.slug}`}>
                      {relatedPost.data.title}
                    </a>
                  </h3>

                  <a
                    href={`/blog/${relatedPost.slug}`}
                    class="inline-flex items-center text-primary hover:text-primary-700 font-medium text-sm mt-2"
                  >
                    Leer más
                    <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>
</Layout>
