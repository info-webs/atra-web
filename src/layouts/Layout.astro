---
export interface Props {
  title: string;
  metaDescription?: string;
  ogImage?: string;
  ogType?: string;
  canonical?: string;
}

const {
  title,
  metaDescription = "ATRA y Obesidad Salamanca - Asociación de apoyo a familias afectadas por TCA y obesidad",
  ogImage = "/logo.png",
  ogType = "website",
  canonical
} = Astro.props;

const siteUrl = "https://atrayobesidad.com";
const fullCanonical = canonical || `${siteUrl}${Astro.url.pathname}`;
const fullOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Noto+Sans:300,400,500,600,700,800&display=swap"
      rel="stylesheet"
    />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content="TCA, trastornos alimentarios, obesidad, anorexia, bulimia, atracón, ayuda TCA, Salamanca, apoyo familias, recuperación TCA" />
    <meta name="author" content="ATRA y Obesidad Salamanca" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={fullCanonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={fullCanonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="ATRA y Obesidad Salamanca" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={metaDescription} />
    <meta property="twitter:image" content={fullOgImage} />

    <!-- Schema.org structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "NGO",
      "name": "ATRA y Obesidad Salamanca",
      "description": "Asociación de apoyo a familias afectadas por TCA y obesidad",
      "url": siteUrl,
      "logo": `${siteUrl}/logo.png`,
      "telephone": "+34622927474",
      "email": "atrayobesidad@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Paseo del Gran Capitán 53, planta 2, despacho 26",
        "addressLocality": "Salamanca",
        "postalCode": "37001",
        "addressCountry": "ES"
      },
      "sameAs": [
        "https://www.instagram.com/atrayobesidadsa/",
        "https://www.facebook.com/p/ATRA-Y-Obesidad-100063570494244/"
      ]
    })} />
  </head>
  <body class="overflow-x-hidden bg-neutral-50 text-neutral-800">
    <slot />
  </body>
  <script
    src="https://kit.fontawesome.com/349ee9c857.js"
    crossorigin="anonymous"
  ></script>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Open Sans', system-ui, sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Noto Sans', 'Open Sans', sans-serif;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
